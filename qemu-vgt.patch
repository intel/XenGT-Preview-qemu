+	XenHostPCIDevice dev;
+	uint32_t val;
+	int r;
+
+	D("B R %x %x", config_addr, len);
+
+	assert(pci_dev->devfn == 0x00);
+
+	switch (config_addr)
+	{
+		case 0x00:        /* vendor id */
