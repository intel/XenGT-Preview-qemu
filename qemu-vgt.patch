+	pci_config_set_revision(dev->config, rid);
+	pci_config_set_class(dev->config, PCI_CLASS_BRIDGE_ISA);
+
+	D("vid: 0x%x, did: 0x%x rid: 0x%x.", (unsigned int)hdev->vendor_id,
+			(unsigned int)hdev->device_id,
