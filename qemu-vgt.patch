+	pci_config_set_vendor_id(dev->config, hdev->vendor_id);
+	pci_config_set_device_id(dev->config, hdev->device_id);
+
+	xen_host_pci_get_block(hdev, PCI_REVISION_ID, (uint8_t *)&rid, 1);
